<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <!--in backend, whatever data comes, it will come in "locals"-->
    <% if(locals.id) { %>
        <p>URL Generated: https://localhost:8001/url/<%= id %></p>
    <%} %>
    <div>
        <form method="POST" action="/url">
            <label for="">Enter Your Orignal URL</label>
            <input type="text" name="url" placeholder="https://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if(locals.urls) { %>
            <table>
                <thead> 
                    <th>S. No</th>
                    <th>ShortID</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach( (urls, index) => {
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <%> })%>
                </tbody>
            </table>
        <% } %>
    </div>

</body>
</html>